%p
  - links = [].tap do |link|
    - link << link_to("Einloggen", new_session_path(resource_name)) if controller_name != 'sessions'
    - link << link_to("Ausloggen", new_registration_path(resource_name)) if controller_name != 'registrations'
    - link << link_to("Passwort vergessen", new_password_path(resource_name)) if controller_name != 'passwords'
  = links.join(' | ').html_safe


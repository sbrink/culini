  - @stores.each do |store|
    %tr{ :class => store.public_access? ? nil : "deactivated"}
      %td.icon
        - if store.header?
          = link_to image_tag(store.header.url(:thumb)), first_categories_path(:store_id => store)
      %td
        = link_to store.name, categories_path(:store_id => store)
        %br
        = store.street

$('.cart_extras_cart_article').hide();
$('<%= escape_javascript(render(@cart_article)) %>').appendTo('#cart_articles');
$('#cart_empty').hide();
$('#opening_hours').hide();
$('#cart').show();

$('#article_count').html($('.cart_article').length)
$('.checkout').show();
var sum = 0;
$('.cart_article').each(function(){
  sum = sum + parseFloat($(this).attr('data-price'))
});
$('#cart_sum .price').html(sum.toFixed(2).replace('.', ',')+" &euro;");

$('#cart').each(function(){this.scrollTop = this.scrollHeight});
